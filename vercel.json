{
  "version": 2,
  "builds": [
    {
      "src": "master_revenue_system.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "master_revenue_system.py" },
    { "src": "/(.*)", "dest": "frontend/dashboard.html" }
  ]
}
